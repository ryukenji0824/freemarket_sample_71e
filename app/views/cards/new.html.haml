= render partial: 'layouts/header', locals: { header: @header }
.p-wrapper
  .p-sign_up_main
    .p-sign_up_main_content お支払い方法
  .p-card_input
    = form_tag(pay_cards_path, method: :post, id: 'charge-form',  name: "inputForm", class: "p-card_input_form") do
      .p-card_input_form_container
        .p-card_input_form_container_group
          %label.p-card_input_form_container_group_label 
            カード番号
            %span.p-card_input_form_container_group_label_span 必須
          = text_field_tag "number", "", class: "p-card_input_form_container_group_input", placeholder: "半角数字のみ" ,maxlength: "16", type: "text", id: "card_number"
          %ul.p-card_input_form_container_group_ul
            %li.p-card_input_form_container_group_ul_li
              %img{:alt => "visa", :height => "20", :src => "//www-mercari-jp.akamaized.net/assets/img/card/visa.svg?2482339763", :width => "49"}
            %li.p-card_input_form_container_group_ul_li
              %img{:alt => "master-card", :height => "20", :src => "//www-mercari-jp.akamaized.net/assets/img/card/master-card.svg?2482339763", :width => "34"}
            %li.p-card_input_form_container_group_ul_li
              %img{:alt => "saison-card", :height => "20", :src => "//www-mercari-jp.akamaized.net/assets/img/card/saison-card.svg?2482339763", :width => "30"}
            %li.p-card_input_form_container_group_ul_li
              %img{:alt => "jcb", :height => "20", :src => "//www-mercari-jp.akamaized.net/assets/img/card/jcb.svg?2482339763", :width => "32"}
            %li.p-card_input_form_container_group_ul_li
              %img{:alt => "american_express", :height => "20", :src => "//www-mercari-jp.akamaized.net/assets/img/card/american_express.svg?2482339763", :width => "21"}
            %li.p-card_input_form_container_group_ul_li
              %img{:alt => "dinersclub", :height => "20", :src => "//www-mercari-jp.akamaized.net/assets/img/card/dinersclub.svg?2482339763", :width => "32"}
            %li.p-card_input_form_container_group_ul_li
              %img{:alt => "discover", :height => "20", :src => "//www-mercari-jp.akamaized.net/assets/img/card/discover.svg?2482339763", :width => "32"}
        .p-card_input_form_container_group
          %label.p-card_input_form_container_group_label 
            有効期限
            %span.p-card_input_form_container_group_label_span 必須
          .p-card_input_form_container_group_wrap
            .p-card_input_form_container_group_wrap_half
              %select.p-card_input_form_container_group_wrap_half_month#exp_month{name: "exp_month", type: "text"}
                %option{value: ""} --
                %option{value: "1"}01
                %option{value: "2"}02
                %option{value: "3"}03
                %option{value: "4"}04
                %option{value: "5"}05
                %option{value: "6"}06
                %option{value: "7"}07
                %option{value: "8"}08
                %option{value: "9"}09
                %option{value: "10"}10
                %option{value: "11"}11
                %option{value: "12"}12
              %span 月
            .p-card_input_form_container_group_wrap_half
              %select.p-card_input_form_container_group_wrap_half_year#exp_year{name: "exp_year", type: "text"}
                %option{value: ""} --
                %option{value: "2019"}19
                %option{value: "2020"}20
                %option{value: "2021"}21
                %option{value: "2022"}22
                %option{value: "2023"}23
                %option{value: "2024"}24
                %option{value: "2025"}25
                %option{value: "2026"}26
                %option{value: "2027"}27
                %option{value: "2028"}28
                %option{value: "2029"}29
              %span 年
        .p-card_input_form_container_group
          %label.p-card_input_form_container_group_label
            セキュリティーコード
            %span.p-card_input_form_container_group_label_span 必須
          = text_field_tag "cvc", "", class: "p-card_input_form_container_group_input", placeholder: "カード背面3~4桁の番号", maxlength: "4", id: "cvc"
          #card_token
        = submit_tag "追加する", class: "p-card_input_form_container_submit", id: "token_submit"
        = link_to "戻る", :back, class: "p-card_input_form_container_back"
= render partial: 'layouts/footer', locals: { footer: @footer }